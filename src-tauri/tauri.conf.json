{
  "$schema": "https://raw.githubusercontent.com/nicholashamilton/nicholashamilton.github.io/refs/heads/main/schemas/tauri-conf-v2.json",
  "productName": "Office Tools",
  "version": "0.1.0",
  "identifier": "com.opensaas-skeletons.office-tools",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Office Tools",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; worker-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' blob: data:; font-src 'self' data:; connect-src 'self' https://unpkg.com https://github.com https://api.github.com https://objects.githubusercontent.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "fileAssociations": [
      {
        "ext": ["docx"],
        "mimeType": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "description": "Word Document",
        "role": "Editor"
      },
      {
        "ext": ["pdf"],
        "mimeType": "application/pdf",
        "description": "PDF Document",
        "role": "Viewer"
      }
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:officetools.db"]
    },
    "updater": {
      "endpoints": [
        "https://github.com/opensaas-skeletons/skeleton-office-tools/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY4MTUyNjJCOUY0MDUzNTYKUldSV1UwQ2ZLeVlWYUR4SDZrL1JDK0wyMWppNUZQSlByS3V2RzIxRWY4aEpFdnRxWVN1ZmZ0eEQK"
    }
  }
}
